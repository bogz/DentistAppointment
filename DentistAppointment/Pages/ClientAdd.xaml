<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DentistAppointment.Pages.ClientAdd" 
    Title="Adauga un nou client">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection Title="Client">
                        <EntryCell Label="Nume" Placeholder="Nume" x:Name="txtNume" Keyboard="Text" />
                        <EntryCell Label="Prenume" Placeholder="Prenume" x:Name="txtPrenume" Keyboard="Text" />
                        <EntryCell Label="Telefon" Placeholder="Adresa" x:Name="txtTelefon" Keyboard="Telephone" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="Save_Clicked"/>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked"/>
    </ContentPage.ToolbarItems>
</ContentPage>